<%= link_to "Items", '/items' %>
<%= link_to "Merchants", '/merchants' %>

<h2><%=link_to @merchant.name, "/merchants/#{@merchant.id}"%>, Create a New Item</h2>
<%= form_tag "/merchants/#{@merchant.id}/items" do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>

  <%= label_tag :description %>
  <%= text_field_tag :description %>

  <%= label_tag :price %>
  <%= text_field_tag :price %>

  <%= label_tag :image %>
  <%= text_field_tag :image %>

  <%= label_tag :inventory %>
  <%= text_field_tag :inventory %>

  <%= submit_tag 'Create Item' %>
<% end %>
